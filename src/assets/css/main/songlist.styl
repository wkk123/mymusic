//公共函数
rectangle(a,b)//矩形
  width a
  height b
square(a)//正方形
  width a
  height a
flexstyle(a,b)
  display -webkit-flex /* Safari */
  display flex
  flex-direction a
  flex-wrap nowrap
  justify-content b
  align-items center
  -ms-flex-direction: a;
  -webkit-flex-direction: a;
  -o-flex-direction: a;
  -moz-flex-direction: a;
  flex-direction: a;
  -ms-align-content: center;
  -webkit-align-content: center;
  -o-align-content: center;
  -moz-align-content: center;
  align-content: center;
// 颜色
$cf0 = #f0f0f0
$cfff = #ffffff
$c333 = #333333
$c666 = #666666
$c999 = #999999
$theme = #FF286B
$FF400B = #FF400B
$border = #EDEDED

$f24 = 0.24rem
$f28 = 0.28rem
$f30 = 0.30rem
$f32 = 0.32rem
$f34 = 0.34rem
$f36 = 0.36rem


.overflow-hidden1
  display block
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
.songlist_item
  rectangle(100%, (height1 = 1.3rem))
  &.active
    color $theme!important
    .title_singer
      color $theme!important
  line-height height1
  .item_info
    rectangle(100%,100%)
    flexstyle(row,flex-start)
    background $cfff
    font-size $f36
    &:hover
      background rgba( 227,227,227,0.9)
    .item_flag
      rectangle(0.12rem,1.0rem)
      &.active
        background $theme
    .item_num
      rectangle(calc(1.1rem - 0.12rem),calc(100% - 0.3rem))
      flexstyle(column,flex-start)
      padding 0.15rem
      .serial_number
        display inline-block
        text-align center
        rectangle(100%,0.7rem)
        line-height 0.7rem
        font-weight: 200
      .num_bottom
        flexstyle(row,flex-start)
        .num_flag
          display block
          rectangle(0.25rem,0.3rem)
          background-image url('./../../images/icon/new.png')
          background-position 0rem -0.90rem
          background-size 0.5rem
          background-repeat: no-repeat
        .num_count
          display inline-block
          rectangle(calc(100% - 0.25rem), 0.3rem)
          font-size $f24
          line-height 0.3rem
          margin-left 0.05rem
          color $c999
    .item_title
      rectangle(calc(100% - 0.12rem - 1.4rem - 1.5rem),calc(100% - 0.2rem - 1px))
      border-bottom 1px solid $border
      flexstyle(row,flex-start)
      padding 0.1rem 0
      .title_songname
        rectangle(100%,0.8rem)
        font-size $f32
        line-height 0.8rem
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        flexstyle(column,flex-start)
        .SonGName_name
          rectangle(100%,auto)
          font-size $f28
          flexstyle(row,flex-start)
        .SonGName_OneSelf
          flexstyle(row,flex-start)
          display inline-block
          border 1px solid $theme
          font-size $f24
          color $theme
          height 0.32rem
          line-height 0.32rem
          border-radius 3px
          padding 0 0.05rem
          margin-left 0.1rem
      .title_singer
        rectangle(100%,0.3rem)
        font-size $f24
        color $c999
        line-height 0.3rem
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
    .item_more
      rectangle(1.5rem,calc(100% - 1px))
      border-bottom 1px solid $border
      flexstyle(row,flex-start)
      .more_mv
        rectangle(50%,100%)
        flexstyle(row,flex-start)
        span
          rectangle(calc(0.55rem - 2px),height2 = calc(0.38rem - 2px))
          text-align center
          line-height 0.38rem
          display block
          border 1px solid $border
          color $border
          font-size $f24
          border-radius 3px
      .more_flag
        rectangle(50%,100%)
        font-size 0.46rem
        color $c999
        font-weight bold