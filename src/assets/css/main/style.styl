//公共函数
rectangle(a,b)//矩形
  width a
  height b
square(a)//正方形
  width a
  height a
flexstyle(a,b)
  display -webkit-flex /* Safari */
  display flex
  flex-direction a
  flex-wrap nowrap
  justify-content b
  align-items center
  -ms-flex-direction: a;
  -webkit-flex-direction: a;
  -o-flex-direction: a;
  -moz-flex-direction: a;
  flex-direction: a;
  -ms-align-content: center;
  -webkit-align-content: center;
  -o-align-content: center;
  -moz-align-content: center;
  align-content: center;
