//排行榜
.Ranking
  rectangle(100%,calc(100% - 0.9rem))
  background $cf0
  font-family poppin,Tahoma,Arial,\5FAE\8F6F\96C5\9ED1,sans-serif
  .Ranking_box
    rectangle(100%,100%)
    padding-top 0.9rem
    overflow-y auto
    -webkit-overflow-scrolling touch
    .Ranking_head
      rectangle(100%,0.9rem)
      color $c333
      font-size $f32
      text-align center
      line-height 0.9rem
      letter-spacing 4px
    .RankingList
      rectangle(calc(100% - 0.4rem),auto)
      padding 0 0.2rem
      .Ranking_item
        rectangle(100%,auto)
        background $cfff
        margin-bottom 0.2rem
        .Ranking_img
          square(2.5rem)
          position relative
          img
            square(100%)
          .Ranking_num
            rectangle(100%,0.7rem)
            position absolute
            bottom 0
            .num_Count
              rectangle(70%,auto)
              color $cfff
              font-size 12px
              font-weight 100
              line-height 0.5rem
              padding-top 0.2rem
              .num_flag
                background-image url('./../../images/icon/download.png')
                background-size 0.5rem
                background-position 0px -44px
                rectangle(0.25rem,0.2rem)
                margin 0.1rem
            .num_switch
              rectangle(25%,100%)
              line-height 0.5rem
              .num_play
                square(0.5rem)
                margin 0.1rem
                background-image url('./../../images/icon/download.png')
                background-size 0.5rem
                &.active
                  background-position 0 -22px
        .Ranking_list
          rectangle(calc(100% - 2.9rem - 1.0rem - 0.3rem),calc(2.5rem - 0.4rem))
          padding 0.2rem 0.15rem
          padding-right 0
          .list_item
            rectangle(3.0rem,0.7rem)
            line-height 0.7rem
            font-size $f30
            .list_index,.list_song,.list_singer
              font-size $f30
            .list_singer
              color $c999
              width 40%
        .Ranking_flag
            width 0.4rem
            height 2.5rem
            margin-left 1.0rem
            font-size $f34
            padding-right 0.15rem
            .flag
              display block
              square(0.3rem)
              border-right 1px solid $border
              border-bottom 1px solid $border
              -webkit-transform rotate(-45deg)
              position relative
              top 50%
              margin-top -0.14rem
